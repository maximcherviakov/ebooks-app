{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./src"
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
